{
  "name": "mini-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run clean && npm run -w @mini/di build && npm run -w @mini/core build && npm run -w @mini/jsx build && npm run -w @mini/plugin build",
    "build:core": "npm run -w @mini/core build",
    "build:jsx": "npm run -w @mini/jsx build",
    "clean": "rm -rf packages/*/dist",
    "rebuild": "npm run clean && npm run build",
    "predev": "npm run build",
    "dev": "npm run -w playground dev",
    "test": "npm -ws run test"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1",
    "@types/node": "^22.7.4",
    "rxjs": "^7.8.1"
  }
}
