{
  "name": "@mini/mcp-server",
  "version": "1.0.0",
  "description": "MCP server para documentação e assistência do MiniJS Framework",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --sourcemap",
    "dev": "tsup src/index.ts --dts --format esm --sourcemap --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "minijs",
    "framework",
    "documentation"
  ],
  "author": "MiniJS Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "~1.24.0"
  },
  "devDependencies": {
    "@types/node": "~20.0.0",
    "tsup": "~8.5.1",
    "typescript": "~5.9.3"
  },
  "files": [
    "dist"
  ]
}
