{
  "name": "@mini/cli",
  "version": "0.1.0",
  "description": "CLI tool to scaffold Mini Framework projects",
  "type": "module",
  "bin": {
    "mini": "./dist/index.js",
    "create-mini": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --sourcemap --shims",
    "dev": "tsup src/index.ts --format esm --sourcemap --shims --watch"
  },
  "keywords": [
    "cli",
    "mini-framework",
    "scaffold",
    "boilerplate",
    "create-app"
  ],
  "dependencies": {
    "@clack/prompts": "~0.11.0",
    "commander": "~14.0.2",
    "execa": "~9.6.0",
    "fs-extra": "~11.3.2",
    "picocolors": "~1.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "~11.0.4",
    "@types/node": "~22.7.4",
    "tsup": "~8.5.1",
    "typescript": "~5.9.3"
  }
}
